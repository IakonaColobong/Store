@model IEnumerable<StoreFront.Data.EF.Category>

@{
    ViewBag.Title = "Categories";
}

<h2>@ViewBag.Title</h2>
@if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
{
    <p>
        @Html.ActionLink("Create New", "Create")
    </p>
}<div class="container-fluid">

    <section class="BookSearch offset-lg-4 col-7">
        <table class="table">
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.CategoryName)
                </th>
                <th></th>
            </tr>

            @foreach (var item in Model)
            {
                <tr>
                    @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                    {
                        <td>
                            @Html.DisplayFor(modelItem => item.CategoryName)
                        </td>
                        <td>
                        <td>
                            <a href="@Url.Action("Edit", "Categories", new { id=item.CategoryID })">
                                <i class="fa fa-pencil-square-o action-icons" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Details", "Categories", new { id = item.CategoryID })">
                                <i class="fa fa-info-circle action-icons" aria-hidden="true"></i>
                            </a>
                            <a href="@Url.Action("Delete", "Categories", new { id = item.CategoryID })">
                                <i class="fa fa-trash-o action-icons" aria-hidden="true"></i>
                            </a>
                        </td>
                        </td>
                    }
                </tr>
            }

        </table>
    </section>
</div>