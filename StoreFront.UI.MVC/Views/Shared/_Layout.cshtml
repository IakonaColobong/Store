<!DOCTYPE html>
<html lang="en">
<head>
    <title>Wizards OFF the Coast &mdash; Website by Colorlib</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">

    <link href="https://fonts.googleapis.com/css?family=Muli:300,400,700,900" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Architects+Daughter&family=Estonia&family=Hurricane&family=Lora:ital,wght@1,500&family=Nanum+Gothic+Coding&family=Padauk&family=Philosopher&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="~/Content/fonts/icomoon/style.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery-ui.css">
    <link rel="stylesheet" href="~/Content/css/owl.carousel.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/owl.theme.default.min.css">
    <link rel="stylesheet" href="~/Content/css/jquery.fancybox.min.css">
    <link rel="stylesheet" href="~/Content/css/bootstrap-datepicker.css">
    <link rel="stylesheet" href="~/Content/fonts/flaticon/font/flaticon.css">
    <link rel="stylesheet" href="~/Content/css/aos.css">
    <link rel="stylesheet" href="~/Content/css/custom.css">
    <link href="~/Content/css/jquery.mb.YTPlayer.min.css" media="all" rel="stylesheet" type="text/css">
    <link rel="stylesheet" href="~/Content/css/style.css">
    <script src="https://kit.fontawesome.com/23f852822f.js" crossorigin="anonymous"></script>

</head>
<body data-spy="scroll" data-target=".site-navbar-target" data-offset="300">
    <div class="site-wrap">
        <div class="site-mobile-menu site-navbar-target">
            <div class="site-mobile-menu-header">
                <div class="site-mobile-menu-close mt-3">
                    #partialLogin
                    <span class="icon-close2 js-menu-toggle"></span>
                </div>
            </div>s
            <div class="site-mobile-menu-body"></div>
        </div>

        <div class="py-2 bg-light" id="partialLogin">
            <div class="container">
                <div class="row align-items-center">
                    <div class="col-lg-9 d-none d-lg-block">

                        <!--Empty content - fill with background image-->
                    </div>
                    <div class="col-lg-3 text-right">

                        @Html.Partial("_LoginPartial")
                    </div>
                </div>
            </div>
        </div>


        <header class="site-navbar py-2 js-sticky-header site-navbar-target" role="banner">

            <div class="container">
                <div class="d-flex align-items-center">
                    <div class="site-logo">
                        <a href="@Url.Action("Index", "Home")" class="d-block">
                            <h3 class="wizards">Wizards OFF the Coast</h3>
                        </a>
                    </div>


                    <div class="mr-auto">
                        <nav class="site-navigation position-relative text-right" role="navigation">
                            <ul class="site-menu main-menu js-clone-nav mr-auto d-none d-lg-block">
                                <li class="active">
                                    <a href="@Url.Action("Index", "Home")" class="nav-link text-left">Home</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Index", "BooksTables")" class="nav-link text-left">Books</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("BooksMVCPaging", "Filters")" class="nav-link text-left">Search</a>
                                </li>
                                <li>
                                    <a href="@Url.Action("Contact","Home")" class="nav-link text-left">Contact</a>
                                </li>
                                @if (User.Identity.IsAuthenticated && (User.IsInRole("Admin") || User.IsInRole("Scheduler")))
                                {
                                    <li class="has-children">
                                        <a href="@Url.Action("About", "Home")" class="nav-link text-left">Admin</a>
                                        <ul class="dropdown">



                                            @if (User.Identity.IsAuthenticated && User.IsInRole("Admin"))
                                            {
                                                <li><a href="@Url.Action("Index", "Employees")">Employees</a></li>


                                            }
                                        </ul>

                                    </li>
                                }
                                <li class="nav-item">
                                    @if (Session["cart"] != null &&
                                        ((Dictionary<int, StoreFront.UI.MVC.Models.CartItemViewModel>)Session["cart"]).Count > 0
                                        )
                                    {
                                        <a class="dropdown-item" href="/ShoppingCart/Index">Cart <i class="fa fa-shopping-cart"></i></a>
                                    }
                                    else
                                    {
                                        @Html.ActionLink("Cart", "Index", "ShoppingCart")
                                    }
                                </li>
                            </ul>
                        </nav>
                    </div>



                </div>
            </div>


        </header>



        @RenderBody()
        @*@RenderPage("/Views/BooksTables/Index.cshtml");*@
        <div class="footer">
            <div class="container">

                <footer id="footer">
                    <div class="footer-holder">
                        <div class="footer-frame">
                            <div class="footer-content">
                                <div class="row">
                                    <div class="col col-md-4">
                                        <div class="heading text-center">
                                            <h3>About us</h3>
                                        </div>
                                        <p>Your leading purveyor of hard to find occult items. We do not Judge, we only make a profit. </p>
                                        <p>Not to be confused with those fantasy game books from the Wizards that live on the coast, we offer only the most authentic of tomes and items. </p>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="heading">
                                            <h3>Contact</h3>
                                        </div>
                                        <address>
                                            <p><strong>Wizards OFF the Coast</strong></p>
                                            <p>1041 Imaginary Land</p>
                                            <p>Sumatra</p>
                                        </address>
                                        <address>
                                            <p>(45) 523 565 242</p>
                                            <p><a href="mailto:office@wizardsoffthecoast.com">office@wizardsoffthecoast.com</a></p>
                                        </address>
                                    </div>
                                    <div class="col-md-4 col-contact">
                                        <div class="heading">
                                            <h3>Follow us</h3>
                                        </div>
                                        <ul class="social">
                                            <li class="facebook"><a href="#">Null Facebook</a></li>
                                            <li class="google"><a href="#">Null Google+</a></li>
                                            <li class="twitter"><a href="#">Null Twitter</a></li>

                                        </ul>
                                    </div>
                                </div>
                            </div>

                            <div class="holder justify-content-center text-center">
                                <p>Copyright 2022 Wizards <strong>OFF</strong> The Coast. All rights reserved.</p>
                            </div>

                        </div>
                    </div>
                </footer>

            </div>
        </div>
    </div>
    <!-- .site-wrap -->
    <!-- loader -->
    <div id="loader" class="show fullscreen"><svg class="circular" width="48px" height="48px"><circle class="path-bg" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke="#eeeeee" /><circle class="path" cx="24" cy="24" r="22" fill="none" stroke-width="4" stroke-miterlimit="10" stroke="#51be78" /></svg></div>
    <script src="~/Content/js/jquery-3.3.1.min.js"></script>
    <script src="~/Content/js/jquery-migrate-3.0.1.min.js"></script>
    <script src="~/Content/js/jquery-ui.js"></script>
    <script src="~/Content/js/popper.min.js"></script>
    <script src="~/Content/js/bootstrap.min.js"></script>
    <script src="~/Content/js/owl.carousel.min.js"></script>
    <script src="~/Content/js/jquery.stellar.min.js"></script>
    <script src="~/Content/js/jquery.countdown.min.js"></script>
    <script src="~/Content/js/bootstrap-datepicker.min.js"></script>
    <script src="~/Content/js/jquery.easing.1.3.js"></script>
    <script src="~/Content/js/aos.js"></script>
    <script src="~/Content/js/jquery.fancybox.min.js"></script>
    <script src="~/Content/js/jquery.sticky.js"></script>
    <script src="~/Content/js/jquery.mb.YTPlayer.min.js"></script>


    <script src="~/Content/js/main.js"></script>

    @RenderSection("scripts", required: false)
</body>
</html>